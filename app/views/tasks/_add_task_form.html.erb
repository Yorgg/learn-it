<%= form_for(@task, remote: true)  do |f| %>
  <%= f.text_field :name, class: 'add-task-field' %> 
  <%= f.hidden_field :date, :value => Date.today %>
  <%= f.hidden_field :goal_id, :value => @goal_id %>
  <br>
  <%= f.submit "Create task", class: "btn btn-success btn-sm" %><span class="cancel">cancel</span>
<% end %>