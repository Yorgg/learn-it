<!-- Modal -->
<div class="modal fade" id="newGoal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add a goal:</h4>
      </div>
    
    <div class="modal-body">  
      <%= form_for @new_goal do |f| %>
        <%= f.label :name %> 
        <%= f.text_field :name, class: 'form-control' %> 
      <div class="actions">
    <%= f.submit "Create", class: "btn btn-sm btn-success" %>
      </div>
    <% end %>
    </div>     
    </div>
  </div>
</div>